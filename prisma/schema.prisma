generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model categories {
  id                Int                 @id @default(autoincrement())
  label             String?
  course_categories course_categories[]
}

model certificates {
  id            Int          @id @default(autoincrement())
  enrollment_id Int?         @unique
  issue_date    DateTime?
  serial_number String?
  enrollment    enrollments? @relation(fields: [enrollment_id], references: [id], onDelete: Cascade)
}

model chapters {
  id        Int      @id @default(autoincrement())
  course_id Int?
  title     String?
  duration  Int?
  course    courses? @relation(fields: [course_id], references: [id], onDelete: Cascade)
}

model course_categories {
  course_id   Int
  category_id Int
  category    categories @relation(fields: [category_id], references: [id], onDelete: Cascade)
  course      courses    @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@id([course_id, category_id])
}

model courses {
  id                Int                 @id @default(autoincrement())
  title             String?
  price             Float?
  instructor_id     Int?
  chapters          chapters[]
  course_categories course_categories[]
  instructor        users?              @relation(fields: [instructor_id], references: [id], onDelete: SetNull)
  enrollments       enrollments[]
  reviews           reviews[]
}

model enrollments {
  id           Int           @id @default(autoincrement())
  user_id      Int?
  course_id    Int?
  date         DateTime?     @default(now())
  certificates certificates?
  course       courses?      @relation(fields: [course_id], references: [id], onDelete: Cascade)
  user         users?        @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model reviews {
  id        Int      @id @default(autoincrement())
  user_id   Int?
  course_id Int?
  rating    Int?
  comment   String?
  course    courses? @relation(fields: [course_id], references: [id], onDelete: Cascade)
  user      users?   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model users {
  id          Int           @id @default(autoincrement())
  name        String?
  email       String?       @unique
  role        String?
  courses     courses[]     // Cours créés en tant qu'instructeur
  enrollments enrollments[] // Inscriptions en tant qu'élève
  reviews     reviews[]
}